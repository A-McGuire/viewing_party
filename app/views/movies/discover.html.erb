<h1>Discover Movies</h1>

<section class='top-rated-button'>
  <%= button_to 'Find Top Rated Movies', '/movies', method: :get, params: {display: :top40} %>
</section>

<section>
  <%= form_with url: "/movies", method: :get, local: true do |f| %>
    <%= f.label :movie_title, placeholder: "Search by movie title"  %>
    <%= f.text_field :movie_title %>

    <%= f.submit "Find Movies" %>
  <% end %>
</section>