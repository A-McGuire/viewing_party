<section class='top-rated-button'>
  <%= button_to 'Find Top Rated Movies', '/movies', method: :get, params: {display: :top40} %>
</section>

<section>
  <%= form_with url: movies_path, method: :get, local: true do |f| %>
  <%= f.label :movie_title %>
  <%= f.text_field :movie_title, placeholder: "Search by movie title" %>

  <%= f.submit "Find Movies" %>
  <% end %>
</section>

<% if @movies.present? %>
<section id='movies'>
  <h1>Top Rated Movies</h1>

  <% @movies.each do |movie| %>
  <section id="movie-<%= movie[:id] %>">
    <%= movie[:title] %><br>
    Vote Average: <%= movie[:vote_average] %><br><br>
  </section>
  <% end %>
</section>
<% end %>