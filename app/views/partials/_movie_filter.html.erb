<section class='top-rated-button'>
  <%= button_to 'Find Top Rated Movies', movies_path, method: :get, params: {display: :top40} %>
</section>

<section>
  <%= form_with url: movies_path, method: :get, local: true do |f| %>
  <%= f.label :movie_title %>
  <%= f.text_field :movie_title, placeholder: "Search by movie title" %>

  <%= f.submit "Find Movies" %>
  <% end %>
</section>